#!/usr/bin/env bash

# Bash script (init script) to manage the manage_my_process script.

# Function to start the manage_my_process script.
start_manage_my_process() {
    ./manage_my_process &      # Start manage_my_process in the background
    echo $! > /var/run/my_process.pid    # Store the PID of manage_my_process in /var/run/my_process.pid
    echo "manage_my_process started"
}

# Function to stop the manage_my_process script.
stop_manage_my_process() {
    if [ -f /var/run/my_process.pid ]; then
        pid=$(cat /var/run/my_process.pid)   # Get the PID from the file
        kill "$pid"                         # Send SIGTERM to the process
        rm /var/run/my_process.pid          # Remove the PID file
        echo "manage_my_process stopped"
    else
        echo "manage_my_process is not running."
    fi
}

# Function to restart the manage_my_process script.
restart_manage_my_process() {
    stop_manage_my_process   # Stop the process if running
    start_manage_my_process  # Start the process again
    echo "manage_my_process restarted"
}

# Main script starts here

# Check the argument passed to the script
case "$1" in
    start)
        start_manage_my_process
        ;;
    stop)
        stop_manage_my_process
        ;;
    restart)
        restart_manage_my_process
        ;;
    *)
        echo "Usage: $0 {start|stop|restart}"
        exit 1
        ;;
esac
